<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwillbs.clish.admin.mapper.AdminEventMapper">
	<!-- 이벤트 리스트 -->
	 <select id="selectAllEvent" resultType="com.itwillbs.clish.admin.dto.EventDTO">
	 	SELECT *
	 	FROM EVENT
	 	ORDER BY
	 		event_created_at
	 	LIMIT
			#{startRow}
			, #{listLimit}
	 </select>
	 
	 <!-- 이벤트 게시물 수  -->
	 <select id="selectCountEvent" resultType="int">
	 	SELECT COUNT(*)
	 	FROM EVENT
	 </select>
	 
	<!-- 이벤트 등록 -->
	<insert id="insertEvent">
		INSERT
		INTO
			EVENT
		VALUES (
			#{eventIdx}
			, #{eventTitle}
			, #{eventDescription}
			, #{eventStartDate}
			, #{eventEndDate}
			, #{eventInProgress}
			, now()
		)
	</insert>
	
	<!-- 이벤트 상세 -->
	<select id="selectEvent" resultType="com.itwillbs.clish.admin.dto.EventDTO">
		SELECT *
		FROM 
			EVENT
		WHERE
			event_idx = #{idx}
	</select>
	
	<!-- 이벤트 수정 -->
	<update id="updateEvent">
		UPDATE
			EVENT
		SET
			event_title = #{eventTitle}
			, event_description = #{eventDescription}
			, event_start_date = #{eventStartDate}
			, event_end_date = #{eventEndDate}
			, event_in_progress = #{eventInProgress}
		WHERE
			event_idx = #{eventIdx}
	</update>
	
	<!-- 이벤트 삭제 -->
	<delete id="deletedEvent">
		DELETE
		FROM
			EVENT
		WHERE
			event_idx = #{idx}
	</delete>
	
	<!-- 이벤트 상태 업데이트 -->
	<update id="updateAllEventStatus">
		UPDATE
			EVENT
		SET
			event_in_progress = 
			CASE
				WHEN CURRENT_DATE &lt; event_start_date THEN 2
				WHEN CURRENT_DATE &gt; event_end_date THEN 0
				ELSE 1
			END
	</update>
</mapper>  
  
  
  
  
  
  
  
  
  
  
  