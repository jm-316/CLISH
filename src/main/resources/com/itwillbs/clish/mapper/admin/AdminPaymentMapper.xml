<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itwillbs.clish.admin.mapper.AdminPaymentMapper">
	<!-- 결제 리스트 -->
	<select id="selectPaymentList" resultType="com.itwillbs.clish.myPage.dto.PaymentInfoDTO">
		SELECT
			imp_uid
			, class_title
			, amount
			, status
			, user_name
			, pay_time
			, receipt_url
		FROM
			PAYMENT_INFO
		ORDER BY 
			pay_time DESC
	</select>
</mapper>  
  
  
  
  
  
  
  
  
  
  
  